<div class="main-container container">
    <div class="col col-md-6">
        <h3 class="section_title3">Update Register</h3>
        <form class="form" action="/update-product/{{productEdit.dataValues.id}}" method="POST">
            <div class="form-item">
                <div class='text-field--outline'>
                    <input class='input text-field--outline__input' type='text' id='name' name='name' required 
                        value="{{productEdit.dataValues.name}}"
                    />
                    <label class='text-field--outline__label' htmlFor='name'>name</label>
                </div>
            </div>
            <div class="form-item">
                <div class='text-field--outline'>
                    <input class='input text-field--outline__input' type='text' id='imgURL' name='imgURL' required
                        value="{{productEdit.dataValues.imgURL}}"
                    />
                    <label class='text-field--outline__label' htmlFor='imgURL'>imgURL</label>
                </div>
            </div>
            <div class="form-item">
                <div class='text-field--outline'>
                    <input class='input text-field--outline__input' type='text' id='size' name='size' required
                        value="{{productEdit.dataValues.size}}"
                    />
                    <label class='text-field--outline__label' htmlFor='size'>Size</label>
                </div>
            </div>
            <div class="form-item">
                <div class='text-field--outline'>
                    <input class='input text-field--outline__input' type='text' id='color' name='color' required
                        value="{{productEdit.dataValues.color}}"
                    />
                    <label class='text-field--outline__label' htmlFor='color'>Color</label>
                </div>
            </div>
            <div class="form-item">
                <div class='text-field--outline'>
                    <input class='input text-field--outline__input' type='text' id='price' name='price' required
                        value="{{productEdit.dataValues.price}}"
                    />
                    <label class='text-field--outline__label' htmlFor='price'>Price</label>
                </div>
            </div>

            <div class="form-item">
                <input type="submit" class="btn btn--refilled btn__full" value="Save Changes">
            </div>
        </form>
    </div>  
</div>